# Factorielle it√©rative
def factorielle_iterative(n):
    resultat = 1
    for i in range(1, n + 1):
        resultat *= i
    return resultat

print("Factorielle it√©rative de 5 :", factorielle_iterative(5))

# Factorielle r√©cursive
def factorielle_recursive(n):
    if n == 0:
        return 1
    return n * factorielle_recursive(n - 1)

print("Factorielle r√©cursive de 5 :", factorielle_recursive(5))

# Factorielle avec comprehension
from functools import reduce

def factorielle_comprehension(n):
    if n == 0:
        return 1
    return reduce(lambda x, y: x * y, [i for i in range(1, n + 1)])

print("Factorielle (comprehension) de 5 :", factorielle_comprehension(5))


# -------------------------------
# 2Ô∏è‚É£ Somme des n premiers entiers
# -------------------------------

# Somme avec while
def somme_while(n):
    i = 1
    s = 0
    while i <= n:
        s += i
        i += 1
    return s

print("Somme 1+2+...+5 (while) :", somme_while(5))

# Somme r√©cursive
def somme_recursive(n):
    if n == 0:
        return 0
    return n + somme_recursive(n - 1)

print("Somme 1+2+...+5 (r√©cursive) :", somme_recursive(5))


# -------------------------------
# 3Ô∏è‚É£ Suite de Fibonacci
# -------------------------------

# Fibonacci it√©ratif
def fib_iter(n):
    a, b = 0, 1
    for _ in range(n):
        a, b = b, a + b
    return a

print("Fibonacci it√©ratif (n=10) :", fib_iter(10))

# Fibonacci r√©cursif
def fib_rec(n):
    if n <= 1:
        return n
    return fib_rec(n - 1) + fib_rec(n - 2)

print("Fibonacci r√©cursif (n=10) :", fib_rec(10))


