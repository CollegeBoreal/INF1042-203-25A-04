# 1️⃣ Fonction polymorphe
def embellir(val):
    """
    Fonction qui illustre le polymorphisme.
    Renvoie un dictionnaire avec type, longueur et valeur transformée.
    """
    resultat = {"type": type(val).__name__}
    
    # Longueur si applicable
    try:
        resultat["longueur"] = len(val)
    except TypeError:
        resultat["longueur"] = None
    
    # Transformation selon type
    if isinstance(val, (int, float)):
        resultat["double"] = val * 2
    elif isinstance(val, str):
        resultat["inverse"] = val[::-1]
    elif isinstance(val, (list, tuple)):
        resultat["somme"] = sum(val)
    elif isinstance(val, dict):
        resultat["cles"] = list(val.keys())
    
    return resultat

# Exemples d'utilisation
valeurs = [42, 3.14, "Python", [1, 2, 3], (4, 5, 6), {"a": 1, "b": 2}]
for v in valeurs:
    print(f"\n--- embellir({v}) ---")
    r = embellir(v)
    for k, val in r.items():
        print(f"{k:10} -> {val}")

