# 2️⃣ Moyenne algébrique et géométrique
import math

def moyenne_algebrique(L):
    return sum(L) / len(L) if L else 0

def moyenne_geometrique(L):
    produit = 1
    for x in L:
        produit *= x
    return produit**(1/len(L)) if L else 0

liste = [3, 6, 9, 12]
print("\nMoyenne algébrique :", moyenne_algebrique(liste))
print("Moyenne géométrique :", moyenne_geometrique(liste))

